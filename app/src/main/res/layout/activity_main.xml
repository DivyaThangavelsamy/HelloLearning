<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/Contraint_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">


    <Button
        android:id="@+id/signup"
        android:layout_width="138dp"
        android:layout_height="35dp"


        android:layout_marginTop="68dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="#4CAF50"

        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@id/guidelineleft"
        app:layout_constraintTop_toBottomOf="@+id/Region" />

    <EditText
        android:id="@+id/mailidedit"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"

        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@id/guidelineright"
        app:layout_constraintTop_toBottomOf="@+id/usernameedit"
        tools:layout_editor_absoluteX="203dp" />

    <EditText
        android:id="@+id/passwordedit"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"


        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/guidelineright"
        app:layout_constraintTop_toBottomOf="@+id/mailidedit"
        tools:layout_editor_absoluteX="203dp" />

    <EditText
        android:id="@+id/confirmPasswordEdit"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"

        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/guidelineright"
        app:layout_constraintTop_toBottomOf="@+id/passwordedit"
        tools:layout_editor_absoluteX="203dp" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"

        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/guidelineright"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordEdit"
        tools:layout_editor_absoluteX="203dp">

        <RadioButton
            android:id="@+id/Male"
            android:layout_width="86dp"
            android:layout_height="40dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioButton11"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Female" />
    </RadioGroup>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"

        android:entries="@array/region"
        app:layout_constraintStart_toStartOf="@id/guidelineright"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:layout_editor_absoluteX="203dp" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        app:layout_constraintVertical_bias="0.8"
        android:layout_marginTop="60dp"

        android:text="CREATE AN ACCOUNT"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:fontFamily="@font/orienta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineleft"
        app:layout_constraintTop_toTopOf="@id/guidelinetop" />

    <TextView
        android:id="@+id/username"
        android:layout_width="115dp"
        android:layout_height="40dp"


        android:text="UserName"
        app:layout_constraintBaseline_toBaselineOf="@+id/usernameedit"
        app:layout_constraintStart_toStartOf="@id/guidelineleft" />

    <EditText
        android:id="@+id/usernameedit"
        android:layout_width="170dp"
        android:layout_height="40dp"


        android:layout_marginTop="54dp"

        android:inputType="textPersonName"

        app:layout_constraintStart_toStartOf="@id/guidelineright"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/mailid"
        android:layout_width="115dp"
        android:layout_height="40dp"


        android:layout_marginTop="21dp"


        android:text="Office Mail Id"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintStart_toStartOf="@id/guidelineleft"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/confirmpassword"
        android:layout_width="115dp"
        android:layout_height="40dp"

        android:layout_marginTop="21dp"

        android:text="Confirm Password"
        app:layout_constraintBottom_toTopOf="@+id/gender"
        app:layout_constraintStart_toStartOf="@id/guidelineleft"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/password"
        android:layout_width="115dp"
        android:layout_height="40dp"


        android:layout_marginTop="21dp"

        android:text="Password"
        app:layout_constraintBottom_toTopOf="@+id/confirmpassword"
        app:layout_constraintStart_toStartOf="@id/guidelineleft"
        app:layout_constraintTop_toBottomOf="@+id/mailid" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="115dp"
        android:layout_height="40dp"

        android:layout_marginTop="21dp"


        android:text="Gender"
        app:layout_constraintBottom_toTopOf="@+id/Region"
        app:layout_constraintStart_toStartOf="@id/guidelineleft"
        app:layout_constraintTop_toBottomOf="@+id/confirmpassword" />

    <TextView
        android:id="@+id/Region"
        android:layout_width="115dp"
        android:layout_height="40dp"


        android:layout_marginTop="21dp"
        android:text="Region"
        app:layout_constraintBottom_toTopOf="@+id/signup"
        app:layout_constraintStart_toStartOf="@id/guidelineleft"
        app:layout_constraintTop_toBottomOf="@+id/gender" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="43dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="200dp"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/terms"
        android:layout_width="29dp"
        android:layout_height="34dp"
        android:layout_marginTop="21dp"
        android:text="CheckBox"
        app:layout_constraintStart_toStartOf="@id/guidelineleft"
        app:layout_constraintTop_toBottomOf="@+id/Region" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="30dp" />

    <TextView
        android:id="@+id/Accept"
        android:layout_width="199dp"
        android:layout_height="25dp"
        android:layout_marginTop="27dp"
        android:text="I accept terms and conditions"
        app:layout_constraintStart_toEndOf="@+id/terms"
        app:layout_constraintTop_toBottomOf="@+id/Region" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>